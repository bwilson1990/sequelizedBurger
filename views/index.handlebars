<!-- modal -->
<div class="modal fade" id="getCodeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" id="modal">
            <div class="modal-body">
                <p>Please enter a burger name!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<h1>Burger Boy!</h1>
<img src="assets/img/burger.jpeg" height="55%" width="55%">
<h2>Randy is hungry! Feed him a Burger!</h2>

<main class="container">
    <div class="row">
        <div class="col-md-6">
          <h4>Burgers Not Eaten!</h4>
            <ul>
                {{#each burgers_table}}
                    {{#unless devoured}}
                        <li>{{this.id}}. {{this.burger_name}}<button data-id="{{this.id}}" class="btn btn-warning btn-sm devour">Devour it!</button></li>
                    {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h4>Burgers Eaten!</h4>
            {{#each burgers_table}}
                {{#if devoured}}
                    <li class="devoured">{{this.id}}.{{this.burger_name}}</li>
                {{/if}}
            {{/each}}
        </div>
    </div>
    <div class="centered">
        <hr>
        <h4>Add a burger!</h4>
        <form id="addBurger">
            <div class="form-group">
                <label for="burgerName">Add Burger:</label>
                <input type="text" class="form-control" id="burgerName" name="burger_name">
            </div>
            <button type="submit" id="submit" class="btn btn-warning">Add Burger</button>
        </form>
    </div>
</main>